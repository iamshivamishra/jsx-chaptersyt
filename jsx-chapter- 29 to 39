import {Link} from 'react-router-dom';
export default function UserList() {
    const userData = [
        { id: 1, name: 'John Doe', email: 'john@gmail.com' },
        { id: 2, name: 'Samien', email: 'Samien@gmail.com' },
        { id: 3, name: 'Ady Topo', email: 'Ady@gmail.com' },
        { id: 4, name: 'Mickel', email: 'Mickel@gmail.com' }
    ]
    return (
        <div style={{ textAlign: 'center', marginTop: '50px', fontSize: '24px', color: 'blue', fontWeight: 'bold', textDecoration: 'underline', textDecorationColor: 'red', textDecorationThickness: '2px', textDecorationStyle: 'dashed', textDecorationSkipInk: 'none', textUnderlineOffset: '5px', textTransform: 'uppercase', textShadow: '12px 9px 6px rgba(0, 0, 0, 0.3)', backgroundColor: 'lightgray', padding: '20px', borderRadius: '10px', boxShadow: '0 4px 8px rgba(0, 0, 0, 0.2)', margin: '20px', border: '2px solid blue', width: '80%', marginLeft: 'auto', marginRight: 'auto', fontFamily: 'Arial, sans-serif', fontSize: '20px'}}> 
            <h1>User List Page</h1>
            {
                userData.map((user, index) => (
                    <div>
                    <h1><Link to={'/users/'+ user.id}>{user.name}</Link></h1>
                    </div>
                ))
            }
        </div>
    )
}
