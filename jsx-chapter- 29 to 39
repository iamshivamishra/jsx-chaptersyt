
// To downlod Route code =>  npm install react-router-dom, 
// To downlod tailwindcss  => npm install -D tailwindcss postcss autoprefixer

import { useState } from 'react';
import reactLogo from './assets/react.svg';
import viteLogo from '/vite.svg';
import './App.css'
import NavBar from './NavBar';
import { Route, Routes, Navigate } from 'react-router-dom';

import PageNotFound from './PageNotFound'; 
import College from './College';
import Student from './Student';
import Department from './Departments'; // Make sure this file name is correct
import Details from './Details';
import UserList from './UserList';
import UserDetail from './UserDetails';

function App() {
  const [count, setCount] = useState(0);

  return (
    <>
      {/* Always show NavBar */}
      <NavBar />

      <Routes>
        {/* Default route (root) redirects to /home */}
        <Route path="/" element={<Navigate to="/home" />} />

        <Route path="/home" element={<h1>Home Page</h1>} />
        <Route path="/login" element={<h1>Login Page</h1>} />
        <Route path="/about" element={<h1>About Page</h1>} />

        {/* <Route path="/users/list" element={<UserList />} /> */}
        <Route path="/users" element={<UserList />} />
        <Route path="/users/:id/:name?" element={<UserDetail />} />

        {/* Nested Routes under /college */}
        <Route path="/college" element={<College />}>
          <Route path="student" element={<Student />} />
          <Route path="department" element={<Department />} />
          <Route path="details" element={<Details />} />
        </Route>

        {/* Catch-all route for unknown paths */}
        <Route path="*" element={<PageNotFound />} />
      </Routes>
    </>
  );
}

export default App;


