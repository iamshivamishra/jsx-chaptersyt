import { NavLink } from 'react-router-dom'; 
import './Header.css';

export default function NavBar() {
  return (
    <div className='header'>
      <div>
        <NavLink className='Navlink' to="/home"><h2>Logo</h2></NavLink>
      </div>
      <div>
        <ul>
          <li>
            <NavLink className={({isActive})=>isActive?'custom-active link':"link" } to='/home'>Home</NavLink>
          </li>
          <li>
            <NavLink className={({isActive})=>isActive?'custom-active link':"link" } to='/login'>Login</NavLink>
          </li>
          <li>
            <NavLink className={({isActive})=>isActive?'custom-active link':"link" } to='/about'>About</NavLink>
          </li>
          <li>
            <NavLink className={({isActive})=>isActive?'custom-active link':"link" } to='/college'>College</NavLink>
          </li>
          <li>
            <NavLink className={({isActive})=>isActive?'custom-active link':"link" } to='/users/list'>Users</NavLink> {/* correct path */}
          </li>
          <li>
            <NavLink className={({isActive})=>isActive?'custom-active link':"link" } to='/users/1'>User Detail</NavLink> {/* example dynamic user */}
          </li>
        </ul>
      </div>
    </div>
  );
}


