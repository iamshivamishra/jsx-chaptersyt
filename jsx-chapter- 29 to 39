import { useParams, Link} from "react-router-dom";
export default function UserDetail() {
    const paraData = useParams();
    console.log(paraData);
    return (
        <div style={{ textAlign: 'center', marginTop: '50px', fontSize: '24px', color: 'blue', fontWeight: 'bold', textDecoration: 'underline', textDecorationColor: 'red', textDecorationThickness: '2px', textDecorationStyle: 'dashed', textDecorationSkipInk: 'none', textUnderlineOffset: '5px', textTransform: 'uppercase', textShadow: '12px 9px 6px rgba(0, 0, 0, 0.3)', backgroundColor: 'lightgray', padding: '20px', borderRadius: '10px', boxShadow: '0 4px 8px rgba(0, 0, 0, 0.2)', margin: '20px', border: '2px solid blue', width: '80%', marginLeft: 'auto', marginRight: 'auto', fontFamily: 'Arial, sans-serif', fontSize: '20px', lineHeight: '1.6' }}>
            <h1>User Details Page</h1>
            <h2>User id is {paraData.id}</h2>
            <h3><Link to='/users'>Back</Link></h3>
        </div>
    )
}



